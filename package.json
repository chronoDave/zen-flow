{
  "name": "zen-flow",
  "version": "16.5.3",
  "description": "MineTweaker ZenScript made easy.",
  "type": "module",
  "exports": {
    ".": "./dist/zenflow.js"
  },
  "keywords": [
    "minetweaker",
    "minecraft",
    "feed the beast",
    "modded",
    "zenscript"
  ],
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chronoDave/zen-flow.git"
  },
  "author": "Chronocide",
  "license": "MIT",
  "engines": {
    "node": ">=22.13.1"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:types": "tsc --noEmit",
    "lint:fix": "eslint src --fix",
    "build": "rollup -c",
    "docs": "typedoc src/index.ts",
    "test": "node --experimental-strip-types --test src/**/*.spec.ts --test-reporter=tap",
    "preversion": "npm run lint:types && npm run lint && npm run test && npm run build && npm run docs",
    "postversion": "git add -A && git commit -m \"Updated docs\""
  },
  "optionalDependencies": {
    "@chronocide/eslint-config": "github:chronoDave/eslint-config",
    "eslint": "^9.9.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "esbuild": "^0.25.0",
    "rollup": "^4.21.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "typedoc": "^0.27.5",
    "typescript": "^5.5.4"
  }
}
