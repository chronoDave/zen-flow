{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["esnext"],
    "module": "es2015",
    "moduleResolution": "bundler",
    
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,

    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./test/build"
  },
  "include": [
    "src",
    "test",
    ".eslintrc.js",
    "rollup.config.js"
  ]
}